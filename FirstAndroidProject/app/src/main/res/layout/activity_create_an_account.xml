<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".CreateAnAccount">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/second_activity_title"
        android:textSize="25dp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingTop="50dp"
        >


        <LinearLayout
            android:layout_gravity="left"
            android:paddingLeft="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/fname"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="First name"
                android:textCursorDrawable="@null"
                android:textStyle="bold"
                android:textColor="#255"
                android:backgroundTint="#255"
                android:singleLine="true"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:orientation="vertical"
            >

            <EditText
                android:id="@+id/lname"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="Last name"
                android:textCursorDrawable="@null"
                android:textStyle="bold"
                android:textColor="#255"
                android:backgroundTint="#255"
                android:singleLine="true"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        >
        <EditText
            android:id="@+id/emp_id"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:hint="Enter employee id"
            android:textCursorDrawable="@null"
            android:textStyle="bold"
            android:textColor="#255"
            android:backgroundTint="#255"
            android:singleLine="true"
            />
        <EditText
            android:id="@+id/emp_email"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:hint="Enter company email"
            android:textCursorDrawable="@null"
            android:textStyle="bold"
            android:textColor="#255"
            android:backgroundTint="#255"
            android:singleLine="true"
            />
        <RadioGroup
            android:id="@+id/radioGroupID"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="10dp"
            >

            <RadioButton
                android:id="@+id/radioItem1_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textSize="18sp"
                android:checked="true"
                android:buttonTint="@color/colorPrimaryDark"
                />

            <RadioButton
                android:id="@+id/radioItem2_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="Female"
                android:textSize="18sp"
                />
        </RadioGroup>

        <CheckBox
            android:id="@+id/cb_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I conciously filled all field and all info are true."
            android:textStyle="normal"
            android:textSize="16sp"
            android:buttonTint="@color/colorPrimaryDark"
            />

    </LinearLayout>

    <Button
        android:id="@+id/submit_btn"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        />

</LinearLayout>